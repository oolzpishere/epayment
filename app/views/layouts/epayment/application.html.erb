<!DOCTYPE html>
<html>
<head>
  <title>Epayment</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <script src="http://res.wx.qq.com/open/js/jweixin-1.1.0.js"></script>

  <%= stylesheet_link_tag    "epayment/application", media: "all" %>
  <%= javascript_include_tag "epayment/application" %>
</head>
<body>
  <div class="container">
    <% if notice %>
      <p id="notice" class="notice alert alert-success fade show" role="alert"><%= notice %></p>
    <% else %>
      <p id="notice" class="notice alert alert-success hide d-none" role="alert"></p>
    <% end %>

    <% if alert %>
      <p id="alert" class="alert alert-warning fade show"><%= alert %></p>
    <% else %>
      <p id="alert" class="alert alert-warning hide d-none"></p>
    <% end %>

    <%= yield %>
  </div>

</body>
</html>
